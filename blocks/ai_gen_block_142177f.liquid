    color: {{ block.settings.heading_color }};
  }

  .ai-auth-subheading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
  }

  .ai-auth-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.card_gap }}px;
    justify-content: center;
    align-items: start;
  }

  @media screen and (min-width: 750px) {
    .ai-auth-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_first_row }}, 1fr);
    }

    .ai-auth-grid-{{ ai_gen_id }}.ai-auth-grid-auto-{{ ai_gen_id }} {
      grid-template-columns: repeat(4, 1fr);
    }

    .ai-auth-grid-{{ ai_gen_id }}.ai-auth-grid-auto-{{ ai_gen_id }}.ai-auth-grid-6-{{ ai_gen_id }} .ai-auth-card-{{ ai_gen_id }}:nth-child(n+5) {
      grid-column: span 2;
    }

    .ai-auth-grid-{{ ai_gen_id }}.ai-auth-grid-auto-{{ ai_gen_id }}.ai-auth-grid-5-{{ ai_gen_id }} {
      grid-template-columns: repeat(5, 1fr);
