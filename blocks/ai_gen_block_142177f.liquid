      grid-template-columns: repeat(2, 1fr);
    }

    .ai-auth-grid-{{ ai_gen_id }}.ai-auth-grid-auto-{{ ai_gen_id }}.ai-auth-grid-1-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }
  }

  .ai-auth-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: {{ block.settings.card_padding }}px;
    transition: box-shadow 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .ai-auth-card-{{ ai_gen_id }}:hover {
      box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    }
  }

  .ai-auth-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: {{ block.settings.icon_spacing }}px;
    flex-shrink: 0;
  }

  .ai-auth-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-auth-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-auth-icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-auth-card-title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
  }

  .ai-auth-card-body-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.body_color }};
    font-size: {{ block.settings.body_size }}px;
    line-height: 1.6;
  }

