{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-about-us-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    width: 100%;
  }

  .ai-about-us-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .ai-about-us-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    margin-bottom: {{ block.settings.image_bottom_spacing }}px;
    position: relative;
  }

  .ai-about-us-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-about-us-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.placeholder_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-about-us-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-about-us-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-about-us-headline-{{ ai_gen_id }} {
    color: {{ block.settings.headline_color }};
    font-size: {{ block.settings.headline_size }}px;
    line-height: {{ block.settings.headline_line_height }}px;
    font-weight: {{ block.settings.headline_font_weight }};
    margin: 0 0 {{ block.settings.headline_bottom_spacing }}px;
    letter-spacing: {{ block.settings.headline_letter_spacing }}px;
    text-transform: {% if block.settings.headline_uppercase %}uppercase{% else %}none{% endif %};
  }

  .ai-about-us-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }}px;
    font-weight: {{ block.settings.text_font_weight }};
    margin: 0;
    max-width: {{ block.settings.text_max_width }}px;
    letter-spacing: {{ block.settings.text_letter_spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-about-us-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top_mobile }}px {{ block.settings.section_padding_horizontal_mobile }}px {{ block.settings.section_padding_bottom_mobile }}px;
    }

    .ai-about-us-image-wrapper-{{ ai_gen_id }} {
      max-width: {{ block.settings.image_max_width_mobile }}px;
      margin-bottom: {{ block.settings.image_bottom_spacing_mobile }}px;
    }

    .ai-about-us-image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.placeholder_height_mobile }}px;
    }

    .ai-about-us-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size_mobile }}px;
      line-height: {{ block.settings.headline_line_height_mobile }}px;
      margin-bottom: {{ block.settings.headline_bottom_spacing_mobile }}px;
    }

    .ai-about-us-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
      line-height: {{ block.settings.text_line_height_mobile }}px;
      max-width: {{ block.settings.text_max_width_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-about-us-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-about-us-container-{{ ai_gen_id }}">
    <div class="ai-about-us-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1200 }}"
          alt="{{ block.settings.image.alt | escape }}"
          class="ai-about-us-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-about-us-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-about-us-empty-state-{{ ai_gen_id }}">
            Add an image to complete your About Us section
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.headline != blank %}
      <h2 class="ai-about-us-headline-{{ ai_gen_id }}">
        {{ block.settings.headline }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-about-us-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

