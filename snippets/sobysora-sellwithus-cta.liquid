
{%- assign show_sell_cta = true -%}
{%- if product.tags contains 'sell-hide' -%}{%- assign show_sell_cta = false -%}{%- endif -%}
{%- if show_sell_cta -%}

  {%- assign _variant = variant | default: 'mobile-box' -%}

  {%- case _variant -%}

  {%- when 'desktop-line' -%}
  <!-- Desktop-only slim line under gallery -->
  <div class="sbs-sellwithus-line sbs-only-desktop" role="note" aria-label="Sell With Us">
    <span class="sbs-line-icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
        <path d="M6 9h12l-1 10a2 2 0 0 1-2 2H9a2 2 0 0 1-2-2L6 9z"/>
        <path d="M9 9V7a3 3 0 0 1 6 0v2"/>
        <path d="M12 13v6M9 16h6"/>
      </svg>
    </span>
    <span class="sbs-line-text">
      Do you have a similar item?
      <a class="sbs-line-link" href="https://consign.circle-hand.com/so-by-sora-1">Click here to Sell with us!</a>
    </span>
  </div>

  {%- when 'mobile-box' -%}
  <!-- Mobile-first CTA box (your existing design) -->
  <div class="sbs-cta-block sbs-sell-cta-wrapper sbs-only-mobile visible-xs">
    <div class="sbs-cta-inner sbs-sell-cta">
      <div class="sbs-icon-circle">
        <img src="https://cdn.shopify.com/s/files/1/0607/0517/7855/files/Sell-wiyh-us-icon2.png?v=1755369759" alt="Sell Icon" width="36" height="36" loading="lazy">
      </div>
      <div class="sbs-sell-text">
        <p class="sbs-sell-headline">Have a similar item?</p>
        <a href="https://consign.circle-hand.com/so-by-sora-1/" class="sbs-sell-link">Book An Appointment To Sell</a>
      </div>
    </div>
  </div>

  {%- endcase -%}

{%- endif -%}
