{% comment %}
  Section: mission-banner.liquid
  Purpose: Fully customizable mission statement block with separate Desktop/Mobile controls.
  How to use: Save in sections/, then add to the About page template via Theme Editor.
{% endcomment %}

<section class="mission-banner" style="
  --mb-bg: {{ section.settings.bg_color }};
  --mb-text: {{ section.settings.text_color }};
  --mb-accent: {{ section.settings.accent_color }};
  --mb-container-max: {{ section.settings.container_max }}px;
  --mb-radius: {{ section.settings.radius }}px;
  --mb-border: {{ section.settings.border_thickness }}px;
  --mb-border-color: {{ section.settings.border_color }};
  --mb-shadow: {% if section.settings.enable_shadow %}0 8px 24px rgba(0,0,0,.06){% else %}none{% endif %};
  /* Desktop defaults (overridden on mobile) */
  --mb-pad-y: {{ section.settings.pad_y_desktop }}px;
  --mb-pad-x: {{ section.settings.pad_x_desktop }}px;
  --mb-margin-top: {{ section.settings.margin_top_desktop }}px;
  --mb-margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  --mb-align: {{ section.settings.text_align_desktop }};
  --mb-justify: {{ section.settings.v_align_desktop }};
  --mb-label-ls: {{ section.settings.label_letterspace }}em;
  --mb-label-size: {{ section.settings.label_size_desktop }}px;
  --mb-heading-size: {{ section.settings.heading_size_desktop }}px;
  --mb-heading-lh: {{ section.settings.heading_lh_desktop }};
  --mb-body-size: {{ section.settings.body_size_desktop }}px;
  --mb-body-lh: {{ section.settings.body_lh_desktop }};
  --mb-gap-label: {{ section.settings.gap_label_desktop }}px;
  --mb-gap-heading: {{ section.settings.gap_heading_desktop }}px;
  --mb-gap-body: {{ section.settings.gap_body_desktop }}px;
  --mb-divider-thickness: {{ section.settings.divider_thickness_desktop }}px;
  --mb-divider-color: {{ section.settings.divider_color }};
  --mb-divider-width: {{ section.settings.divider_width_desktop }}%;
  --mb-divider-offset: {{ section.settings.divider_offset_desktop }}px;
">
  <div class="mission-inner page-width" style="max-width: var(--mb-container-max)">
    <div class="mission-surface" {% if section.settings.bg_image != blank %}style="background-image:url({{ section.settings.bg_image | image_url }}); background-size:cover; background-position:center;"{% endif %}>
      <div class="mission-content">
        {% if section.settings.label != blank %}
          <p class="mission-label">{{ section.settings.label }}</p>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="mission-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.body != blank %}
          <div class="mission-body rte">{{ section.settings.body }}</div>
        {% endif %}
        {% if section.settings.show_divider %}
          <span class="mission-divider" aria-hidden="true"></span>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .mission-banner { background: var(--mb-bg); color: var(--mb-text); border-radius: var(--mb-radius); box-shadow: var(--mb-shadow); margin-top: var(--mb-margin-top); margin-bottom: var(--mb-margin-bottom); }
  .mission-inner { padding-left: var(--mb-pad-x); padding-right: var(--mb-pad-x); }
  .mission-surface { border: var(--mb-border) solid var(--mb-border-color); border-radius: var(--mb-radius); }
  .mission-content { display: flex; flex-direction: column; align-items: var(--mb-align); justify-content: var(--mb-justify); text-align: var(--mb-align); padding: var(--mb-pad-y) 0; }
  .mission-label { text-transform: uppercase; letter-spacing: var(--mb-label-ls); opacity: .9; font-weight: 600; margin: 0 0 var(--mb-gap-label) 0; font-size: var(--mb-label-size); color: var(--mb-accent); }
  .mission-heading { font-size: var(--mb-heading-size); line-height: var(--mb-heading-lh); letter-spacing: .01em; margin: 0 0 var(--mb-gap-heading) 0; }
  .mission-body { font-size: var(--mb-body-size); line-height: var(--mb-body-lh); opacity: .95; max-width: 60ch; margin: 0 0 var(--mb-gap-body) 0; }
  .mission-divider { display: block; height: var(--mb-divider-thickness); width: var(--mb-divider-width); background: var(--mb-divider-color); border-radius: 2px; margin-top: var(--mb-divider-offset); }
  @media (max-width: 749px) {
    .mission-banner {
      --mb-pad-y: {{ section.settings.pad_y_mobile }}px;
      --mb-pad-x: {{ section.settings.pad_x_mobile }}px;
      --mb-margin-top: {{ section.settings.margin_top_mobile }}px;
      --mb-margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      --mb-align: {{ section.settings.text_align_mobile }};
      --mb-justify: {{ section.settings.v_align_mobile }};
      --mb-label-size: {{ section.settings.label_size_mobile }}px;
      --mb-heading-size: {{ section.settings.heading_size_mobile }}px;
      --mb-heading-lh: {{ section.settings.heading_lh_mobile }};
      --mb-body-size: {{ section.settings.body_size_mobile }}px;
      --mb-body-lh: {{ section.settings.body_lh_mobile }};
      --mb-gap-label: {{ section.settings.gap_label_mobile }}px;
      --mb-gap-heading: {{ section.settings.gap_heading_mobile }}px;
      --mb-gap-body: {{ section.settings.gap_body_mobile }}px;
      --mb-divider-thickness: {{ section.settings.divider_thickness_mobile }}px;
      --mb-divider-width: {{ section.settings.divider_width_mobile }}%;
      --mb-divider-offset: {{ section.settings.divider_offset_mobile }}px;
    }
    .mission-body { max-width: 100%; }
  }
</style>

{% schema %}
{
  "name": "Mission banner",
  "settings": [
    { "type": "text", "id": "label", "label": "Section label (e.g., OUR MISSION)", "default": "OUR MISSION" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Extend the Life Cycle of Luxury" },
    { "type": "richtext", "id": "body", "label": "Body", "default": "<p>Expertly crafted items can change hands countless times and still retain their beauty and value. We're on a mission to enable more people to own and appreciate luxury while maximizing the value of their investments.</p>" },

    { "type": "header", "content": "Colors & Surface" },
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#747660" },
    { "type": "image_picker", "id": "bg_image", "label": "Background image (optional)" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#FFFFFF" },
    { "type": "color", "id": "accent_color", "label": "Label color (accent)", "default": "#FFFFFF" },
    { "type": "checkbox", "id": "enable_shadow", "label": "Soft shadow", "default": false },
    { "type": "range", "id": "radius", "label": "Corner radius (px)", "min": 0, "max": 32, "step": 1, "default": 0 },
    { "type": "range", "id": "container_max", "label": "Max inner width (px)", "min": 640, "max": 1600, "step": 20, "default": 1080 },
    { "type": "range", "id": "border_thickness", "label": "Outer border thickness (px)", "min": 0, "max": 6, "step": 1, "default": 0 },
    { "type": "color", "id": "border_color", "label": "Outer border color", "default": "#FFFFFF" },

    { "type": "header", "content": "Desktop – Spacing & Alignment" },
    { "type": "range", "id": "margin_top_desktop", "label": "Margin top (px)", "min": 0, "max": 200, "step": 2, "default": 40 },
    { "type": "range", "id": "margin_bottom_desktop", "label": "Margin bottom (px)", "min": 0, "max": 200, "step": 2, "default": 40 },
    { "type": "range", "id": "pad_y_desktop", "label": "Padding Y (px)", "min": 20, "max": 240, "step": 4, "default": 80 },
    { "type": "range", "id": "pad_x_desktop", "label": "Padding X (px)", "min": 0, "max": 120, "step": 2, "default": 24 },
    { "type": "select", "id": "text_align_desktop", "label": "Horizontal text alignment", "default": "center", "options": [ { "value": "left", "label": "Left" }, { "value": "center", "label": "Center" }, { "value": "right", "label": "Right" } ] },
    { "type": "select", "id": "v_align_desktop", "label": "Vertical alignment", "default": "center", "options": [ { "value": "flex-start", "label": "Top" }, { "value": "center", "label": "Center" }, { "value": "flex-end", "label": "Bottom" } ] },

    { "type": "header", "content": "Desktop – Typography & Gaps" },
    { "type": "range", "id": "label_size_desktop", "label": "Label size (px)", "min": 10, "max": 24, "step": 1, "default": 12 },
    { "type": "range", "id": "heading_size_desktop", "label": "Heading size (px)", "min": 20, "max": 72, "step": 1, "default": 40 },
    { "type": "text", "id": "heading_lh_desktop", "label": "Heading line-height (unitless)", "default": "1.2" },
    { "type": "range", "id": "body_size_desktop", "label": "Body size (px)", "min": 12, "max": 24, "step": 1, "default": 16 },
    { "type": "text", "id": "body_lh_desktop", "label": "Body line-height (unitless)", "default": "1.6" },
    { "type": "range", "id": "label_letterspace", "label": "Label letter-spacing (em)", "min": 0, "max": 0.4, "step": 0.1, "default": 0.1 },
    { "type": "range", "id": "gap_label_desktop", "label": "Gap below label (px)", "min": 0, "max": 48, "step": 1, "default": 10 },
    { "type": "range", "id": "gap_heading_desktop", "label": "Gap below heading (px)", "min": 0, "max": 48, "step": 1, "default": 16 },
    { "type": "range", "id": "gap_body_desktop", "label": "Gap below body (px)", "min": 0, "max": 60, "step": 1, "default": 12 },

    { "type": "header", "content": "Desktop – Divider" },
    { "type": "checkbox", "id": "show_divider", "label": "Show bottom divider", "default": true },
    { "type": "range", "id": "divider_thickness_desktop", "label": "Divider thickness (px)", "min": 0, "max": 6, "step": 1, "default": 1 },
    { "type": "range", "id": "divider_width_desktop", "label": "Divider width (% of text block)", "min": 10, "max": 100, "step": 5, "default": 100 },
    { "type": "color", "id": "divider_color", "label": "Divider color", "default": "#FFFFFF" },
    { "type": "range", "id": "divider_offset_desktop", "label": "Gap above divider (px)", "min": 0, "max": 40, "step": 1, "default": 16 },

    { "type": "header", "content": "Mobile – Spacing & Alignment" },
    { "type": "range", "id": "margin_top_mobile", "label": "Margin top (px)", "min": 0, "max": 160, "step": 2, "default": 24 },
    { "type": "range", "id": "margin_bottom_mobile", "label": "Margin bottom (px)", "min": 0, "max": 160, "step": 2, "default": 24 },
    { "type": "range", "id": "pad_y_mobile", "label": "Padding Y (px)", "min": 16, "max": 200, "step": 4, "default": 64 },
    { "type": "range", "id": "pad_x_mobile", "label": "Padding X (px)", "min": 0, "max": 60, "step": 2, "default": 16 },
    { "type": "select", "id": "text_align_mobile", "label": "Horizontal text alignment (mobile)", "default": "center", "options": [ { "value": "left", "label": "Left" }, { "value": "center", "label": "Center" }, { "value": "right", "label": "Right" } ] },
    { "type": "select", "id": "v_align_mobile", "label": "Vertical alignment (mobile)", "default": "center", "options": [ { "value": "flex-start", "label": "Top" }, { "value": "center", "label": "Center" }, { "value": "flex-end", "label": "Bottom" } ] },

    { "type": "header", "content": "Mobile – Typography & Gaps" },
    { "type": "range", "id": "label_size_mobile", "label": "Label size (px)", "min": 10, "max": 22, "step": 1, "default": 11 },
    { "type": "range", "id": "heading_size_mobile", "label": "Heading size (px)", "min": 18, "max": 48, "step": 1, "default": 28 },
    { "type": "text", "id": "heading_lh_mobile", "label": "Heading line-height (unitless)", "default": "1.25" },
    { "type": "range", "id": "body_size_mobile", "label": "Body size (px)", "min": 12, "max": 20, "step": 1, "default": 14 },
    { "type": "text", "id": "body_lh_mobile", "label": "Body line-height (unitless)", "default": "1.7" },
    { "type": "range", "id": "gap_label_mobile", "label": "Gap below label (px)", "min": 0, "max": 40, "step": 1, "default": 8 },
    { "type": "range", "id": "gap_heading_mobile", "label": "Gap below heading (px)", "min": 0, "max": 40, "step": 1, "default": 12 },
    { "type": "range", "id": "gap_body_mobile", "label": "Gap below body (px)", "min": 0, "max": 48, "step": 1, "default": 12 },

    { "type": "header", "content": "Mobile – Divider" },
    { "type": "range", "id": "divider_thickness_mobile", "label": "Divider thickness (px)", "min": 0, "max": 6, "step": 1, "default": 1 },
    { "type": "range", "id": "divider_width_mobile", "label": "Divider width (% of text block)", "min": 20, "max": 100, "step": 5, "default": 100 },
    { "type": "range", "id": "divider_offset_mobile", "label": "Gap above divider (px)", "min": 0, "max": 40, "step": 1, "default": 14 }
  ],
  "presets": [ { "name": "Mission banner", "category": "Text" } ]
}
{% endschema %}
